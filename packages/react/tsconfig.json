{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react-jsx",
    // "noEmit": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "DOM"
    ],
  },
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/svg-mask.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}